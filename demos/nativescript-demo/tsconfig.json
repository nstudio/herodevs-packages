{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "lib": [
            "es6",
            "dom",
            "es2015.iterable"
        ],
        "baseUrl": ".",
        "paths": {
            "@herodevs/lazy-af": [
                "../../dist/lazy"
            ],
            "@herodevs/lazy-af/*": [
                "../../dist/lazy/*"
            ],
            "@herodevs/dynamic-af": [
                "../../dist/dynamic-service"
            ],
            "@herodevs/dynamic-af/*": [
                "../../dist/dynamic-service/*"
            ],
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ],
            "~/*": [
                "app/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "platforms"
    ]
}